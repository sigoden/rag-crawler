{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "newLine": "lf",
    "baseUrl": "./src",
    "lib": ["ES2020"],
    "paths": {
        "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}